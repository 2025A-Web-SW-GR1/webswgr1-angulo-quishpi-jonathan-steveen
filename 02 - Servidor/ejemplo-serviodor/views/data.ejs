<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
</head>

<body>
    <h1>Datos "Casa"</h1>
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-4">

            <% if (casa?.username) { %>
                <h2 class="mt-5">Tus datos</h2>
                <table class="table table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>Campo</th>
                            <th>Valor</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>ID</td>
                            <td>
                                <%= casa.id %>
                            </td>
                        </tr>
                        <tr>
                            <td>Nombre</td>
                            <td>
                                <%= casa.nombre %>
                            </td>
                        </tr>
                        <tr>
                            <td>Valor</td>
                            <td>
                                <%= casa.valor %>
                            </td>
                        </tr>
                        <tr>
                            <td>Imagen</td>
                            <td>
                                <% if (casa.imagenURL) { %>
                                    <img src="<%= casa.imagenURL %>" alt="Imagen de la casa" class="img-fluid"
                                        style="max-width: 100px;">
                                    <% } else { %>
                                        Sin imagen
                                        <% } %>
                            </td>
                        </tr>
                        <tr>
                            <td>fileContentType</td>
                            <td>
                                <%= casa.fileContentType || 'Sin registrar' %>
                            </td>
                        </tr>
                        <tr>
                            <td>filename</td>
                            <td>
                                <%= casa.filename || 'Sin registrar' %>
                            </td>
                        </tr>
                        <tr>
                            <td>fileID</td>
                            <td>
                                <%= casa.fileID || 'Sin registrar' %>
                            </td>
                        </tr>
                        <tr>
                            <td>Username</td>
                            <td>
                                <%= casa.username %>
                            </td>
                        </tr>
                        <tr>
                            <td>Password</td>
                            <td>Protegido</td>
                        </tr>
                    </tbody>
                </table>

                <h2 class="mt-5">Listado de todas las casas</h2>
                <table class="table table-striped table-hover table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Valor</th>
                            <th>Imagen</th>
                            <th>Propietario</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% casas.forEach(function(c) { %>
                            <tr>
                                <td>
                                    <%= c.id %>
                                </td>
                                <td>
                                    <%= c.nombre %>
                                </td>
                                <td>
                                    <%= c.valor %>
                                </td>
                                <td>
                                    <% if (c.imagenURL) { %>
                                        <img src="<%= c.imagenURL %>" alt="Imagen" style="max-width: 80px;">
                                        <% } else { %>
                                            Sin imagen
                                            <% } %>
                                </td>
                                <td>
                                    <%= c.username %>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>


                <a href="/auth/logout">
                    <button class="btn btn-danger">Logout</button>
                </a>

                <% } else { %>
                    <h2>NO tiene sesi√≥n!</h2>
                    <% } %>

        </div>
        <div class="col-sm-4"></div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q"
        crossorigin="anonymous"></script>
</body>

</html>